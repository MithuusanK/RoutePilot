# RoutePilot Backend Environment Configuration
# Copy this file to .env and fill in your Supabase credentials

# Application Settings
APP_NAME=RoutePilot API
APP_VERSION=1.0.0
DEBUG=false

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key-here

# Supabase Database Connection
# Get from: https://app.supabase.com/project/_/settings/database
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Database Pool Settings (optional - defaults are fine for most use cases)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# CORS Origins (comma-separated, optional)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Routing Service Configuration (for Step 2 - route generation)
ROUTING_SERVICE=osrm
OSRM_BASE_URL=http://router.project-osrm.org
# OPENROUTESERVICE_API_KEY=your-ors-api-key-here  # Only needed if using OpenRouteService
